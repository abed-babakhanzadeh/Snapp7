@model Snapp.Core.ViewModels.Admin.RateTypeViewModel

@{
    ViewData["Title"] = "گزینه جدید";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="card">
			<div class="header">
				<h4 class="title pull-right">ثبت گزینه جدید</h4>
				<h4 class="title pull-left">
					@*<a href="/Car/Index" class="btn btn-danger">*@
					<a asp-controller="RateType" asp-action="Index" class="btn btn-danger">
						بازگشت
					</a>
				</h4>
			</div>
			<div class="clearfix"></div>
			<div class="content">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="Name" class=""></label>
						<input asp-for="Name" class="form-control" placeholder="نام گزینه" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>					
					
					<div class="form-group">
						<label asp-for="ViewOrder" class=""></label>
						<input asp-for="ViewOrder" class="form-control" value="0" min="0" />
						<span asp-validation-for="ViewOrder" class="text-danger"></span>
					</div>
					
					<div class="form-group">
						<label asp-for="Ok" class=""></label>
						<input asp-for="Ok" class="form-control" placeholder="مثبت؟" />
						<span asp-validation-for="Ok" class="text-danger"></span>
					</div>
					


					<div class="form-group">
						<input type="submit" value="ثبت و بازگشت" class="btn btn-info btn-fill" />

					</div>
				</form>

			</div>
		</div>
	</div>
</div>
