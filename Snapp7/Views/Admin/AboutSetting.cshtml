@model Snapp.Core.ViewModels.Admin.AboutSettingViewModel
@{
    ViewData["Title"] = "تنظیمات درباره ما";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}


@if (ViewBag.IsSuccess == true)
{
	<script src="~/js/sweet.js"></script>
	<script>
        swal("پیغام", "تغییرات با موفقیت انجام شد.", "success", {
            button: "متوجه شدم",
        })
    </script>
}

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="card">
			<div class="header">
				<h4 class="title pull-right">تنظیمات درباره ما</h4>
				<h4 class="title pull-left">
					@*<a href="/Car/Index" class="btn btn-danger">*@
					<a asp-controller="Admin" asp-action="Index" class="btn btn-danger">
						بازگشت
					</a>
				</h4>
			</div>
			<div class="clearfix"></div>
			<div class="content">
				<form asp-action="AboutSetting">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>


					<div class="form-group">
						<label asp-for="About" class=""></label>
						<textarea asp-for="About" class="form-control" ></textarea>
						<span asp-validation-for="About" class="text-danger"></span>
					</div>


					<div class="form-group">
						<input type="submit" value="ذخیره و بازگشت" class="btn btn-info btn-fill" />

					</div>
				</form>

			</div>
		</div>
	</div>
</div>

@section mySection
{
	<script src="~/ckeditor/ckeditor.js"></script>
	<script src="~/ckeditor/adapters/jquery.js"></script>
	<script>
		$(function (){
			$('#About').ckeditor();
		});
	</script>

}