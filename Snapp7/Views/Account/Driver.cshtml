 @model Snapp.Core.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "رانندگان";
    Layout = "~/Views/Shared/_accountLayout.cshtml";
}

 <h3 class="text-center">راننده گرامی، خوش آمدید</h3><br/>
 <h5 class="text-center">کد فعالسازی برای شما پیامک خواهد شد</h5>


 <hr />

<form asp-action="Driver">
	 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	 <div class="form-group">
		 <label asp-for="Username" class="control-label"></label>
		 <input asp-for="Username" class="form-control" placeholder="مثل 09123456789" />
		 <span asp-validation-for="Username" class="text-danger"></span>
	 </div>
	 <div class="form-group">
		 <input type="submit" value="ارسال کد فعالسازی" class="btn btn-success btn-block" />
	 </div>
 </form>